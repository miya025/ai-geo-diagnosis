---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  lang?: "ja" | "en";
  canonicalUrl?: string;
}

const {
  title,
  description = "AIがあなたのWebサイトをAI検索エンジン（ChatGPT、Perplexity等）に引用されやすいかどうか診断。GEO（Generative Engine Optimization）スコアで可視化します。",
  lang = "ja",
  canonicalUrl,
} = Astro.props;

// 本番URL（環境変数から取得、なければデフォルト）
const siteUrl = import.meta.env.SITE_URL || "https://aigeodiagnosis.com";
const currentUrl = canonicalUrl || `${siteUrl}${Astro.url.pathname}`;
const ogImageUrl = `${siteUrl}/og-image.png`;

// 言語別のタイトルと説明
const seoContent = {
  ja: {
    siteName: "GEO診断",
    description:
      "AIがあなたのWebサイトをAI検索エンジン（ChatGPT、Perplexity等）に引用されやすいかどうか診断。GEO（Generative Engine Optimization）スコアで可視化します。",
  },
  en: {
    siteName: "GEO Diagnosis",
    description:
      "Check if your website is optimized for AI Search Engines like ChatGPT and Perplexity. Visualize your GEO (Generative Engine Optimization) score.",
  },
};

const content = seoContent[lang];
const finalDescription = description || content.description;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={finalDescription} />
    <meta name="author" content="miyadev" />
    <meta name="robots" content="index, follow" />

    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl} />

    <!-- Alternate Languages -->
    <link rel="alternate" hreflang="ja" href={`${siteUrl}/?lang=ja`} />
    <link rel="alternate" hreflang="en" href={`${siteUrl}/?lang=en`} />
    <link rel="alternate" hreflang="x-default" href={siteUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={finalDescription} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content={content.siteName} />
    <meta property="og:locale" content={lang === "ja" ? "ja_JP" : "en_US"} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={finalDescription} />
    <meta property="twitter:image" content={ogImageUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#4f46e5" />

    <!-- Structured Data (JSON-LD) -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebApplication",
        name: content.siteName,
        description: finalDescription,
        url: siteUrl,
        applicationCategory: "BusinessApplication",
        operatingSystem: "Web Browser",
        offers: {
          "@type": "Offer",
          price: "0",
          priceCurrency: "JPY",
        },
        creator: {
          "@type": "Organization",
          name: "miyadev",
        },
      })}
    />
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 text-slate-800"
  >
    <slot />
  </body>
</html>
